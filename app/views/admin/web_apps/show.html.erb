<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_web_app_path(@web_app), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_web_app_path(@web_app), data: {
                    turbo_method: :delete,
                    turbo_confirm: t('defaults.message.delete_confirm')
        } , class: 'btn btn-error' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:id) %></th>
          <td><%= @web_app.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:site_name) %></th>
          <td><%= @web_app.site_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:url) %></th>
          <td><%= link_to @web_app.url, @web_app.url, target: "_blank" %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:ogp_title) %></th>
          <td><%= @web_app.ogp_title %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:ogp_description) %></th>
          <td><%= @web_app.ogp_description %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:ogp_image) %></th>
          <td><%= image_tag @web_app.ogp_image, class: "border border-black", width: '240' %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:offer_date) %></th>
          <td><%= @web_app.offer_date %></td>
        </tr>
        <tr>
          <th scope="row"><%= WebApp.human_attribute_name(:screenshot) %></th>
          <td>
            <div class="w-[720px] h-[450px] overflow-y-scroll border border-black">
            <%= image_tag @web_app.screenshot.url if @web_app.screenshot.present? %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
