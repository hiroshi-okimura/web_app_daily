  <div class="flex items-center space-x-3">
    <%= image_tag 'sample.jpg', class: "h-8 w-8 rounded-full" %>
    <div>
      <h2 class="text-lg font-semibold"><%= current_user.name %></h2>
      <p class="text-sm">Online</p>
    </div>
  </div>

  <!-- Navigation Menu -->
  <nav>
