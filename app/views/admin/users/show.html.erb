<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.index'), admin_users_path, class: 'btn btn-outline btn-accent' %>
        <%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: t('defaults.message.delete_confirm')
        } , class: 'btn btn-error' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:id) %></th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:role) %></th>
          <td><%= @user.role %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:provider) %></th>
          <td><%= @user.provider %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:notify_time) %></th>
          <td><%= @user.notify_time %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
