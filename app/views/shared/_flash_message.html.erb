<% flash.each do |message_type, message| %>
  <div class="p-4 text-sm text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800" role="alert">
    <% case message_type %>
    <% when 'notice', 'success' %>
      <div class="text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"><%= message %></div>
    <% when 'alert', 'error' %>
      <div class="text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800"><%= message %></div>
    <% when 'warning' %>
      <div class="text-yellow-700 bg-yellow-100 rounded-lg dark:bg-yellow-200 dark:text-yellow-800"><%= message %></div>
    <% else %>
      <div class="text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800"><%= message %></div>
    <% end %>
  </div>
<% end %>