<% if object.errors.any? %>
  <div id="error_messages" class="alert alert-error w-auto mb-2">
    <div>
      <ul class="mb-0">
        <% object.errors.full_messages.each do |msg| %>
          <li class="text-sm sm:text-base"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>