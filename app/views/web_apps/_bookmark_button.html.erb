<% if user_signed_in? %>
  <%= turbo_frame_tag "bookmark_button" do %>
    <% if current_user.bookmark?(web_app) %>
      <%= render 'web_apps/unbookmark', { web_app: web_app } %>
    <% else %>
      <%= render 'web_apps/bookmark', { web_app: web_app } %>
    <% end %>
  <% end %>
<% else %>
  <%= render 'bookmark', { web_app: web_app } %>
<% end %>