<% if unique_tags.present? %>
  <% unique_tags.each do |tag| %>
    <% if user_signed_in? && @web_app.user_tags(current_user).include?(tag) %>
      <div class="badge badge-secondary">
        <%= link_to tag.name, web_apps_path(tag_id: tag.id) %>
      </div>
    <% else %>
      <div class="badge badge-outline">
        <%= link_to tag.name, web_apps_path(tag_id: tag.id) %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p class="px-8 text-gray-400 text-xs md:text-base">まだこのWebアプリに登録されているタグはありません。</p>
<% end %>